{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "allowJs": true,
    "noErrorTruncation": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}